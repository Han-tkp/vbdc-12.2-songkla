// ส่วน Server-side (---)
// เราจะลบการ fetch ข้อมูลตอน build ออกไปเลย!
// ปล่อยให้มันเป็นหน้าที่ของ Client
---
<html lang="th">
<head>
  <meta charset="utf-8" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <meta name="viewport" content="width=device-width" />
  <meta name="generator" content={Astro.generator} />
  <title>สมุดเยี่ยม ศตม.</title>
</head>
<body class="bg-gray-100 text-gray-900">
  
  <main class="max-w-2xl mx-auto p-8">
    <h1 class="text-3xl font-bold mb-6 text-blue-800">สมุดเยี่ยม (Guestbook)</h1>

    <form id="guestbook-form" class="bg-white p-6 rounded-lg shadow-md mb-8">
      <div class="mb-4">
        <label for="name" class="block text-sm font-medium text-gray-700">ชื่อ:</label>
        <input type="text" id="name" name="name" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500">
      </div>
      <div class="mb-4">
        <label for="message" class="block text-sm font-medium text-gray-700">ข้อความ:</label>
        <textarea id="message" name="message" rows="3" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500"></textarea>
      </div>
      <button type="submit" class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 transition duration-300">
        ส่งข้อความ
      </button>
      <p id="form-status" class="text-sm mt-4 text-center"></p>
    </form>

    <h2 class="text-2xl font-semibold mb-4">ข้อความทั้งหมด</h2>
    <div id="messages-list" class="space-y-4">
      <p id="messages-loading" class="text-gray-500">กำลังโหลดข้อความ...</p>
    </div>

  </main>

  <script>
    const form = document.getElementById('guestbook-form');
    const statusEl = document.getElementById('form-status');
    const listEl = document.getElementById('messages-list');
    const loadingEl = document.getElementById('messages-loading');

    // --- 1. ฟังก์ชันสำหรับโหลดข้อความ (GET) ---
    async function loadMessages() {
      try {
        const response = await fetch('/api/messages'); // GET request
        if (!response.ok) {
          throw new Error('Server ตอบกลับมามีปัญหา');
        }
        const messages = await response.json();

        // ล้าง list เก่า
        listEl.innerHTML = ''; 

        if (messages.length === 0) {
          listEl.innerHTML = '<p class="text-gray-500">ยังไม่มีข้อความ...</p>';
        } else {
          // สร้าง HTML สำหรับแต่ละข้อความ
          messages.forEach(msg => {
            const div = document.createElement('div');
            div.className = 'bg-white p-4 rounded-lg shadow';
            div.innerHTML = `
              <p class="font-bold">${escapeHTML(msg.name)}</p>
              <p class="text-gray-700">${escapeHTML(msg.message_text)}</p>
              <p class="text-xs text-gray-500 mt-2">
                ${new Date(msg.created_at).toLocaleString('th-TH')}
              </p>
            `;
            listEl.appendChild(div);
          });
        }

      } catch (error) {
        console.error(error);
        listEl.innerHTML = `<p class="text-red-500">โหลดข้อความไม่สำเร็จ: ${error.message}</p>`;
      }
    }

    // --- 2. ฟังก์ชันสำหรับจัดการการ Submit (POST) ---
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      const formData = new FormData(form);
      const name = formData.get('name');
      const message = formData.get('message');

      statusEl.textContent = 'กำลังส่ง...';
      statusEl.className = 'text-sm mt-4 text-center text-blue-600';

      try {
        const response = await fetch('/api/messages', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ name, message }),
        });

        if (!response.ok) {
          throw new Error('Server ตอบกลับมามีปัญหา');
        }

        // ถ้าสำเร็จ
        statusEl.textContent = 'ส่งข้อความสำเร็จ!';
        statusEl.className = 'text-sm mt-4 text-center text-green-600';
        form.reset();
        
        // โหลดข้อความใหม่ทันที (ไม่ต้อง reload หน้า)
        await loadMessages(); 
        
        setTimeout(() => { statusEl.textContent = ''; }, 3000);

      } catch (error) {
        console.error(error);
        statusEl.textContent = 'เกิดข้อผิดพลาด: ' + error.message;
        statusEl.className = 'text-sm mt-4 text-center text-red-600';
      }
    });

    // --- 3. ฟังก์ชันสำหรับป้องกัน XSS (ควรมี) ---
    function escapeHTML(str) {
      return str.replace(/[&<>"']/g, function(match) {
        return {
          '&': '&amp;',
          '<': '&lt;',
          '>': '&gt;',
          '"': '&quot;',
          "'": '&#39;'
        }[match];
      });
    }

    // --- 4. สั่งให้โหลดข้อความทันทีที่หน้าเว็บโหลด ---
    loadMessages();
  </script>
</body>
</html>